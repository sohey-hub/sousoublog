 <div class="text-left m-5">
  <%= form_with(model: @article, local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">タイトル</label>
    <%= f.text_field :title, class:"form-control", id:"exampleFormControlInput1" %>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">説明文</label>
    <%= f.text_area :text, class:"form-control", id:"exampleFormControlTextarea1", rows:"3"%>
  </div>
  <p></p>
    <%= f.submit "出品する" ,class:"btn btn-primary btn-lg btn-block" %>
    <%= link_to 'もどる', root_path, class:"btn btn-secondary btn-lg btn-block" %>
  <% end %>
</div>