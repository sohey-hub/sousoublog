<div class="text-center">
<div class="card border-white">
  <%= image_tag(@article.image, class:"rounded mx-auto", height:"500", width:"500") %>
  <div class="card-body">
    <h5 class="card-title"><%= @article.title %></h5>
    <p class="card-text"><%= @article.text.truncate(30) %></p>
    <p class="card-text"><small class="text-muted"><%= @article.genre.name %></small></p>
  </div>
</div>
</div>